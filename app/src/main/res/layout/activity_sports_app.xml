<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/formUnit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF1F51E4"
    android:foregroundTint="#491414"
    tools:context=".SportsApp">

    <Button
        android:id="@+id/btnLearnMore"
        android:layout_width="209dp"
        android:layout_height="90dp"
        android:backgroundTint="#FFDD00"
        android:text="Learn More"
        android:textColor="#1148D6"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.771" />

    <TextView
        android:id="@+id/txtTeamName"
        android:layout_width="364dp"
        android:layout_height="262dp"
        android:text="GOLDEN STATE WARRIORS"
        android:textColor="#F3E802"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.094" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="256dp"
        android:layout_height="108dp"
        android:text ="...the mission to strengthen and empower underserved communities by providing programs and activities that promote self-esteem,respect,integrity,teamwork and literacy"
        android:textColor="#EDD97E"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.896"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.226" />

</androidx.constraintlayout.widget.ConstraintLayout>